{
  "name": "bma-bw-map",
  "version": "1.0.0",
  "description": "bma bandwidth capacity map",
  "main": "main.js",
  "scripts": {
    "test": "electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/rinradanat/bma-bw-map",
  "author": "Rinrada",
  "license": "ISC",
  "dependencies": {
    "exceljs": "^1.15.0",
    "file-saver": "^2.0.2",
    "hover.css": "^2.3.2",
    "html-to-image": "^0.1.1",
    "jquery": "^3.4.1",
    "react-tooltip": "^3.11.1",
    "read-excel-file": "^4.0.2",
    "tether-tooltip": "^1.2.0",
    "xlsexport": "^1.5.2",
    "xlsx": "^0.15.1"
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^20.44.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-reload": "^1.5.0"
  },
  "build": {
    "appId": "bma-bw-map",
    "productName": "BMA Map",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "icon": false,
      "contents": [
        {
          "x": 130,
          "y": 150
        },
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  }
}
